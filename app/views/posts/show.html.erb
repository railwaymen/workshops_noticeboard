<% title "Post" %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<% if @post.address.present? %>
  <p>
    <strong>Location:</strong>
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@post.latitude} #{@post.longitude}" %>
  </p>
<% end %>
<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>
<p>
  <%= link_to "View All", posts_path %>
</p>
